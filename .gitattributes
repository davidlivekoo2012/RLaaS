# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.dockerfile text eol=lf
Dockerfile text eol=lf
Makefile text eol=lf
*.sql text eol=lf

# Windows-specific files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Declare files that will always have CRLF line endings on checkout
*.sln text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.ez binary
*.bz2 binary
*.swp binary
*.jar binary
*.class binary
*.so binary
*.dll binary
*.exe binary

# Archive files
*.tar binary
*.tgz binary

# Jupyter notebooks (treat as text but don't normalize)
*.ipynb text

# Docker files
docker-compose*.yml text eol=lf
.dockerignore text eol=lf

# Configuration files
.env* text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# CI/CD files
.github/**/* text eol=lf
.gitlab-ci.yml text eol=lf
.travis.yml text eol=lf
appveyor.yml text eol=lf

# Kubernetes and Helm files
*.k8s.yml text eol=lf
*.k8s.yaml text eol=lf
charts/**/* text eol=lf

# Terraform files
*.tf text eol=lf
*.tfvars text eol=lf

# Documentation
*.rst text eol=lf
LICENSE text eol=lf
CHANGELOG* text eol=lf
CONTRIBUTING* text eol=lf
README* text eol=lf
AUTHORS* text eol=lf
INSTALL* text eol=lf
NEWS* text eol=lf
HISTORY* text eol=lf
NOTICE* text eol=lf
